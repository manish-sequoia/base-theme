	"private": true,
	"scripts": {
		"prod": "NODE_ENV=production webpack --progress && npm run pot",
		"dev": "webpack --watch --progress",
		"clean": "rm -rf assets/build/*",
		"lint:css": "stylelint assets/src/sass{*,**/*}.scss;",
		"lint:js": "eslint assets/src/js/",
