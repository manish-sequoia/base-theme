        "@wordpress/prettier-config": "^2.0.0",
		"@wordpress/stylelint-config": "^21.0.0",
		"babel-loader": "^8.2.5",
		"css-loader": "^6.7.1",
		"eslint": "^8.23.0",
		"eslint-webpack-plugin": "^3.2.0",
		"lint-staged": "^13.0.3",
		"mini-css-extract-plugin": "^2.6.1",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.4.16",
		"postcss-loader": "^7.0.1",
		"postcss-preset-env": "^7.8.0",
		"sass": "^1.54.5",
		"sass-loader": "^13.0.2",
		"stylelint": "^14.11.0",
		"stylelint-webpack-plugin": "^3.3.0",
